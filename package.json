{
  "name": "animal-shelter",
  "version": "1.0.0",
  "private": true,
  "description": "animal-shelter",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "^8.3.0",
    "browser-sync": "^2.23.7",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.1",
    "gulp-wait": "0.0.2",
    "gulp-webp": "^3.0.0",
    "run-sequence": "^2.2.1",
    "stylelint": "^9.2.0",
    "stylelint-config-htmlacademy": "^0.1.1"
